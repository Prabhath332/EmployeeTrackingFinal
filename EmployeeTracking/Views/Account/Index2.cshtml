@using EmployeeTracking.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Log in</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/Content/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/plugins/iCheck/square/blue.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>
<body class="hold-transition login-page" style="overflow: hidden;">
    <div class="login-box">

        <div class="login-logo" style="margin-bottom: 0px;">
            <img src="~/Content/Images/management systems-web logo.png" style="width: 100%; margin-top: -18px;" />
        </div>
        <div class="login-box-body" style="width: 508px; align-content: center; margin-left: -75px;">
            <p class="login-box-msg">Select your sector to start your session</p>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                <div class="row" style="text-align:right;">
                    <div class="col-xs-12">
                        <br />
                        <a href="http://sems.siot.lk/"><img src="~/Content/Images/telecommunications.png" data-toggle="tooltip" data-placement="top" title="Telecommunication" style="width: 90px; height: 90px; border: 3px groove silver;" class="btn btn-default" /></a>
                        <a href="http://sems.road.siot.lk/"><img src="~/Content/Images/road.png" data-toggle="tooltip" data-placement="top" title="Roads & Bridges" style="width: 90px; height: 90px; border: 3px groove silver;" class="btn btn-default"></a>
                        <a href="http://sems.civil.siot.lk/"><img src="~/Content/Images/engineers.png" data-toggle="tooltip" data-placement="top" title="Civil Engineering" style="width: 90px; height: 90px; border: 3px groove silver;" class="btn btn-default" /></a>
                        <a href="http://sems.water.siot.lk/"><img src="~/Content/Images/water-droplet.png" data-toggle="tooltip" data-placement="top" title="Water & Sewerage" style="width: 90px; height: 90px; border: 3px groove silver;" class="btn btn-default" /></a>
                        <a href="http://sems.ho.siot.lk/"><img src="~/Content/Images/office-building.png" data-toggle="tooltip" data-placement="top" title="Sierra Head Office" style="width: 90px; height: 90px; border: 3px groove silver;" class="btn btn-default" /></a>
                    </div>
                </div>
            }

            @*<a href="#">I forgot my password</a><br>
        <a href="register.html" class="text-center">Register a new membership</a>*@
        </div>

        <div style="text-align: center;">
            <img src="~/Content/Images/Powered by SIoT Services (Pvt) Ltd.png" style="width: 75%;" />
        </div>
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/plugins/iCheck/icheck.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/Scripts/noti.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
    <script>
        @Html.Raw(TempData["ErMsg"])
    </script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>

</body>
</html>
