@model System.Web.Mvc.HandleErrorInfo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Error";
}

<section class="content-header">
    <h1>Application Error</h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <div class="row"><div class="col-md-2"><strong>Message  :</strong></div><div class="col-md-10">@Model.Exception.Message</div></div>
                    <div class="row"><div class="col-md-2"><strong>Source  :</strong></div><div class="col-md-10">@Model.Exception.Source</div></div>
                    <div class="row"><div class="col-md-2"><strong>Data  :</strong></div><div class="col-md-10">@Model.Exception.Data</div></div>
                    @*<div class="row"><div class="col-md-2"><strong>Inner Exception  :</strong></div><div class="col-md-10">@Model.Exception.InnerException</div></div>*@
                    
                </div>
            </div>
        </div>
    </div>
</section>
